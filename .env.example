# Telegram Bot
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# OpenAI (for Whisper transcription)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenRouter (for LLM)
# Get this from https://openrouter.ai/keys
OPENROUTER_API_KEY=

# OpenRouter Model
# Browse models at https://openrouter.ai/models
# Examples: x-ai/grok-3-fast, x-ai/grok-3, anthropic/claude-3.5-sonnet, openai/gpt-4o
OPENROUTER_MODEL=x-ai/grok-3-fast

# Upstash Redis
# Get these from https://console.upstash.com/ after creating a Redis database
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Upstash QStash
# Get these from https://console.upstash.com/qstash
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# Base URL (your Vercel production URL)
BASE_URL=https://your-app.vercel.app

# Access Control (optional)
# Comma-separated list of allowed Telegram usernames or user IDs
# If not set, bot is open to everyone
# Example: ALLOWED_USERS=johndoe,123456789
ALLOWED_USERS=

# User Timezone (for accurate time handling)
# Use IANA timezone names: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# Examples: America/New_York, America/Los_Angeles, Europe/London, Asia/Tokyo
USER_TIMEZONE=America/Los_Angeles

# Braintrust (optional, for LLM tracing/observability)
# Get this from https://braintrust.dev/
BRAINTRUST_API_KEY=
